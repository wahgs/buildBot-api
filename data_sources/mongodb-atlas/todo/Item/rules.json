{
    "collection": "Item",
    "database": "todo",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "%%root.owner_id": "%%user.id"
            },
            "fields": {
                "_id": {
                    "write": true,
                    "read": true
                },
                "isComplete": {
                    "write": true,
                    "read": true
                },
                "owner_id": {
                    "write": true,
                    "read": true
                },
                "summary": {
                    "write": true,
                    "read": true
                }
            },
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {}
        }
    ]
}
